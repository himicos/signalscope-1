{
  "root": true,
  "env": { "browser": true, "es2022": true },
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["react-refresh"],
      "rules": {
        "react-refresh/only-export-components": ["warn", { "allowConstantExport": true }]
      }
    }
  ]
}